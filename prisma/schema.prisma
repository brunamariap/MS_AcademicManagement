// database
datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

// generator
generator client {
    provider             = "prisma-client-py"
    interface            = "sync"
    recursive_type_depth = 5
}

model Course {
    id              String        @id @default(uuid())
    name            String
    byname          String
    periodsQuantity Int
    degree          String
    discipline      Discipline[]
    schoolClass     SchoolClass[]
}

model Discipline {
    id              String  @id @default(uuid())
    name            String
    referencePeriod Int
    code            String
    isOptative      Boolean
    courseId        String
    course          Course  @relation(fields: [courseId], references: [id], onDelete: Cascade)
}

// enum Shift {
