model SchoolClass {
    id              String @id @default(uuid())
    referencePeriod Int
    shift           String
    courseId        String
    course          Course @relation(fields: [courseId], references: [id], onDelete: Cascade)
}

model Event {
    id          String   @id @default(uuid())
    title       String
    description String
    startTime   DateTime
    endTime     DateTime
    createdBy   String
}

model Diary {
    id              String   @id @default(uuid())
    referencePeriod Int
    referenceYear   Int
    startDate       DateTime
    endDate         DateTime
}
